<T3DataStructure>
  <sheets>

	<sDEF>
		<ROOT>
			<TCEforms>
				<sheetTitle>Common configuration</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>

				<showtype>
					<TCEforms>
						<label>Type of view:</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Register</numIndex>
									<numIndex index="1">register</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Edit</numIndex>
									<numIndex index="1">edit</numIndex>
								</numIndex>
							</items>
							<maxitems>1</maxitems>
							<size>1</size>
						</config>
					</TCEforms>
				</showtype>

				<register.emailtemplate>
					<TCEforms>
						<label>Registration e-mail template:</label>
						<config>
							<type>input</type>
							<size>20</size>
							<max>256</max>
							<checkbox></checkbox>
							<eval>trim</eval>
							<wizards type="array">
								<_PADDING type="integer">2</_PADDING>
								<link type="array">
									<type>popup</type>
									<title>Link</title>
									<icon>link_popup.gif</icon>
									<script>browse_links.php?mode=wizard</script>
									<JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
								</link>
							</wizards>
						</config>
					</TCEforms>
				</register.emailtemplate>

				<register.redirect>
					<TCEforms>
						<label>Registration redirect site id:</label>
						<config>
							<type>input</type>
							<size>10</size>
							<max>256</max>
							<checkbox></checkbox>
							<eval>trim</eval>
							<wizards type="array">
								<_PADDING type="integer">2</_PADDING>
								<link type="array">
									<type>popup</type>
									<title>Link</title>
									<icon>link_popup.gif</icon>
									<script>browse_links.php?mode=wizard</script>
									<JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
								</link>
							</wizards>
						</config>
					</TCEforms>
				</register.redirect>

				<register.autologin>
					<TCEforms>
						<label>Registration autologin?</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</register.autologin>

				<register.doubleoptin>
					<TCEforms>
						<label>Registration double-opt-in?</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</register.doubleoptin>

				<usedfields>
					<TCEforms>
						<label>Used fields:</label>
						<config>
							<type>select</type>
							<minitems>0</minitems>
							<maxitems>100</maxitems>
							<size>20</size>
							<autoSizeMax>20</autoSizeMax>
							<selectedListStyle>width:400px</selectedListStyle>
							<itemListStyle>width:400px</itemListStyle>
							<itemsProcFunc>tx_flexform_getFieldNames->getFieldNames</itemsProcFunc>
							<allowNonIdValues>1</allowNonIdValues>
							<multiple>1</multiple>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">--separator--</numIndex>
									<numIndex index="1">--separator--</numIndex>
								</numIndex>
							</items>
						</config>
					</TCEforms>
				</usedfields>

				<requiredfields>
					<TCEforms>
						<label>Required fields:</label>
						<config>
							<type>select</type>
							<size>20</size>
							<autoSizeMax>20</autoSizeMax>
							<minitems>0</minitems>
							<maxitems>100</maxitems>
							<selectedListStyle>width:400px</selectedListStyle>
							<itemListStyle>width:400px</itemListStyle>
							<itemsProcFunc>tx_flexform_getFieldNames->getFieldNames</itemsProcFunc>
							<allowNonIdValues>1</allowNonIdValues>
						</config>
					</TCEforms>
				</requiredfields>

			</el>
		</ROOT>
	</sDEF>

  </sheets>
</T3DataStructure>